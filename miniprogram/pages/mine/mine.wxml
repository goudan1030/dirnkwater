<view class="page">
  <!-- 返回按钮 -->
  <view class="back-wrapper" catchtap="goBack">
    <image src="/static/back.png" class="back"></image>
  </view>
  <!-- 返回结束 -->
  <!-- 登录框开始 -->
  <view class="logoin" wx:if="{{canIUseGetUserProfile}}">
    <view class="avtor" catchtap="{{login==false ? 'getUserProfile' : 'goToProfile'}}">
      <image wx:if="{{login==true}}" src="{{userInfo.avatarUrl}}" class="user"></image>
      <image wx:elif="{{login==false}}" src="/static/user2.png" class="user"></image>
    </view>
    <view wx:if="{{login==true}}"  class="title" catchtap="goToProfile">{{userInfo.nickName}},你好呀</view>
    <view wx:if="{{login==false}}"  class="title" catchtap="getUserProfile">立即登录</view>
    <view wx:if="{{login==true}}" class="logout-btn" catchtap="logout">退出登录</view>
  </view>
  <!-- 登录框结束 -->
<!-- <button bindtap="sendSubscribeMessage">下发通知测试</button> -->
  <!-- 自定义模态框 -- 引导跳授权设置页面 -->
  <view class="jumpSetModel" wx:if="{{isShowSetModel}}">
    <view class="jumpSetBox">
     <view class="m-title">提示</view>
      <view class="m-content">检测到您未开启订阅消息通知权限，是否去设置？</view>
      <view class="m-control">
        <button class="m-cancel" catchtap="closeSetModel">取消</button>
        <button class="m-confirm" open-type="openSetting" bindopensetting="openSetCallback">去设置</button>
      </view>
    </view>
  </view>
  <!-- 闹钟管理 -->
  <view class="alarm-box" bindtap="goToAlarm">
    <view class="alarm-icon">⏰</view>
    <view class="alarm-content">
      <view class="alarm-title">闹钟管理</view>
      <view class="alarm-desc">设置喝水提醒时间</view>
    </view>
    <text class="alarm-arrow">></text>
  </view>
  <!-- 订阅消息提醒开始-->
  <view class="notic">
    <text class="n-title">开启订阅消息</text>
    <text class="n-info">开启订阅消息后，小助手会在设置的闹钟时间通过订阅消息提醒您喝水，点击下方按钮开启吧～</text>
    <button class="n-btn" bindtap="sub">开启订阅消息</button>
  </view>
  <!-- 订阅消息提醒结束-->
