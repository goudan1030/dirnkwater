.page {
  z-index: 1;
  background-color: rgba(244,245,249,1);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background-color: #F6F6F6;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 30rpx;
  z-index: 1000;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.back-wrapper {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back {
  width: 18rpx;
  height: 36rpx;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: 500;
  color: rgba(0,0,0,0.9);
  flex: 1;
  text-align: center;
  margin-right: 60rpx;
}

.navbar-right {
  width: 60rpx;
}

.profile-container {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

/* 头像区域 */
.avatar-section {
  background-image: linear-gradient(#F3F5F8, #fff);
  border-radius: 12rpx;
  border: 2px solid rgba(255,255,255,1);
  box-shadow: 8px 8px 20px 0px rgba(55,99,170,0.1), -8px -8px 20px 0px #fff;
  padding: 60rpx 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section-title {
  font-size: 32rpx;
  color: rgba(152,163,183,1);
  margin-bottom: 40rpx;
  align-self: flex-start;
}

.avatar-wrapper {
  position: relative;
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
  width: 200rpx;
  height: 200rpx;
}

.avatar-wrapper::after {
  border: none;
}

.avatar-box {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  overflow: hidden;
  border: 4px solid rgba(255,255,255,1);
  box-shadow: 8px 8px 20px 0px rgba(55,99,170,0.1), -8px -8px 20px 0px #fff;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}

.avatar-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.5));
  padding: 20rpx 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-tip {
  color: #fff;
  font-size: 24rpx;
}

.section-desc {
  font-size: 24rpx;
  color: rgba(152,163,183,0.8);
  margin-top: 30rpx;
  text-align: center;
}

/* 昵称区域 */
.nickname-section {
  background-image: linear-gradient(#F3F5F8, #fff);
  border-radius: 12rpx;
  border: 2px solid rgba(255,255,255,1);
  box-shadow: 8px 8px 20px 0px rgba(55,99,170,0.1), -8px -8px 20px 0px #fff;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.input-wrapper {
  position: relative;
  background-color: rgba(255,255,255,0.8);
  border-radius: 8rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: inset 0px 2px 8px 0px rgba(55,99,170,0.05);
}

.nickname-input {
  width: 100%;
  font-size: 32rpx;
  color: rgba(152,163,183,1);
  line-height: 44rpx;
}

.input-count {
  position: absolute;
  right: 30rpx;
  bottom: 24rpx;
  font-size: 24rpx;
  color: rgba(152,163,183,0.6);
}

/* 保存按钮区域 */
.save-section {
  padding: 60rpx 30rpx 0;
  margin-top: 80rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: rgba(234,110,105,1);
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0px 4px 12px 0px rgba(243,188,186,1);
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.save-btn::after {
  border: none;
}

.save-btn[disabled] {
  opacity: 0.6;
}

.save-btn:not([disabled]):active {
  opacity: 0.8;
  transform: scale(0.98);
}

